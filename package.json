{
    "name": "mcfunction-langserver",
    "description": "Language Server for Minecraft Functions",
    "version": "0.0.1",
    "author": "Levertion",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "precommit": "pretty-quick --staged && npm run check && npm run test && npm run lint && npm run build && git add dist",
        "build": "parcel build src/index.ts --target=node --no-minify",
        "test": "mocha --opts ./mocha.opts",
        "check": "tsc -p tsconfig.json --noEmit",
        "lint": "tslint --project .",
        "prettier": "prettier **/*.{ts,json,yml}",
        "prettier:write": "npm run prettier -- --write",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Levertion/mcfunction-langserver/"
    },
    "files": [
        "dist",
        "src"
    ],
    "keywords": [
        "Minecraft"
    ],
    "prettier": {
        "tabWidth": 4,
        "proseWrap": "always"
    },
    "dependencies": {
        "long": "^4.0.0",
        "node-interval-tree": "^1.3.3",
        "request": "^2.83.0",
        "request-promise-native": "^1.0.5",
        "sprintf-js": "^1.1.1",
        "tslib": "^1.9.3",
        "util.promisify": "^1.0.0",
        "vscode-languageserver": "^5.0.0",
        "vscode-uri": "^1.0.6"
    },
    "devDependencies": {
        "@types/long": "4.0.0",
        "@types/mocha": "5.2.5",
        "@types/node": "8.10.34",
        "@types/request-promise-native": "1.0.15",
        "@types/rimraf": "2.0.2",
        "@types/sprintf-js": "1.1.0",
        "all-contributors-cli": "5.4.0",
        "husky": "1.1.1",
        "mocha": "5.2.0",
        "parcel": "1.10.2",
        "prettier": "1.14.3",
        "pretty-quick": "1.7.0",
        "rimraf": "2.6.2",
        "ts-mocha": "2.0.0",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.15.0",
        "typescript": "3.1.1",
        "vscode-languageserver-types": "3.13.0"
    }
}
