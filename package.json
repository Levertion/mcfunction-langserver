{
    "name": "mcfunction-langserver",
    "description": "Language Server for Minecraft Functions",
    "version": "0.0.1",
    "author": "Levertion",
    "license": "MIT",
    "main": "out/index.js",
    "scripts": {
        "test": "mocha --opts ./mocha.opts",
        "compile": "tsc -p tsconfig.json",
        "lint": "tslint --project .",
        "precommit": "pretty-quick --staged",
        "prettier": "prettier **/*.{ts,json,yml}",
        "prettier:write": "npm run prettier -- --write",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Levertion/mcfunction-langserver/"
    },
    "keywords": [
        "Minecraft"
    ],
    "prettier": {
        "tabWidth": 4,
        "proseWrap": "always"
    },
    "dependencies": {
        "node-interval-tree": "^1.3.3",
        "request": "^2.83.0",
        "request-promise-native": "^1.0.5",
        "util.promisify": "^1.0.0",
        "vscode-languageserver": "^5.0.0"
    },
    "devDependencies": {
        "@types/mocha": "5.2.5",
        "@types/node": "8.10.21",
        "@types/request-promise-native": "1.0.15",
        "@types/rimraf": "2.0.2",
        "all-contributors-cli": "5.4.0",
        "husky": "0.14.3",
        "mocha": "5.2.0",
        "prettier": "1.14.2",
        "pretty-quick": "1.6.0",
        "rimraf": "2.6.2",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.15.0",
        "typescript": "3.0.1",
        "vscode-languageserver-types": "3.11.0"
    }
}
